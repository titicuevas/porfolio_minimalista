---
const { title, class: className } = Astro.props
---

<section class={className}>
  {title && (
    <div class="section-header">
      <h2 class="pixel-section-title">{title}</h2>
      <div class="pixel-underline"></div>
    </div>
  )}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 48px;
  }

  .section-header {
    position: relative;
    margin-bottom: 24px;
    text-align: center;
  }

  .pixel-section-title {
    margin-bottom: 16px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.8rem;
    color: var(--primary-color);
    text-shadow: 3px 3px 0px rgba(0, 0, 0, 0.3);
    position: relative;
    display: inline-block;
  }

  .pixel-underline {
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, 
      var(--retro-yellow) 0%, 
      var(--retro-green) 25%, 
      var(--retro-blue) 50%, 
      var(--retro-purple) 75%, 
      var(--retro-orange) 100%
    );
    border: var(--pixel-border) solid var(--text-color);
    box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.2);
    animation: rainbow-shift 3s ease-in-out infinite;
  }

  @keyframes rainbow-shift {
    0%, 100% { 
      background: linear-gradient(90deg, 
        var(--retro-yellow) 0%, 
        var(--retro-green) 25%, 
        var(--retro-blue) 50%, 
        var(--retro-purple) 75%, 
        var(--retro-orange) 100%
      );
    }
    50% { 
      background: linear-gradient(90deg, 
        var(--retro-orange) 0%, 
        var(--retro-yellow) 25%, 
        var(--retro-green) 50%, 
        var(--retro-blue) 75%, 
        var(--retro-purple) 100%
      );
    }
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 38px;
    }

    .pixel-section-title {
      font-size: 1.5rem;
    }

    .section-header {
      margin-bottom: 20px;
    }
  }

  @media (max-width: 480px) {
    .pixel-section-title {
      font-size: 1.3rem;
    }
  }
</style>
