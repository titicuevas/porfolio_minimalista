---
import Section from "../Section.astro";
import { work } from "@cv";
import HTML from "@/icons/html.astro";
import CSS from "@/icons/css.astro";
import JavaScript from "@/icons/javascript.astro";
import React from "@/icons/react.astro";
import MySQL from "@/icons/sql.astro";
import Git from "@/icons/git.astro";
import GitHub from "@/icons/GitHub.astro";
import Tailwind from "@/icons/tailwind.astro";
import TailwindCSS from "@/icons/tailwindcss.astro";
import PHP from "@/icons/php.astro";
import Laravel from "@/icons/laravel.astro";
import Python from "@/icons/python.astro";
import PostgreSQL from "@/icons/postgresql.astro";
import Docker from "@/icons/docker.astro";
import WordPress from "@/icons/wordpress.astro";
import SourceTree from "@/icons/sourcetree.astro";
import Bootstrap from "@/icons/bootstrap.astro";
import Supabase from "@/icons/supabase.astro";
import PayPal from "@/icons/paypal.astro";

const SKILLS_ICONS = {
  HTML,
  CSS,
  JavaScript,
  React,
  MySQL,
  Git,
  GitHub,
  Tailwind,
  TailwindCSS,
  "Tailwind CSS": TailwindCSS,
  PHP,
  Laravel,
  Python,
  PostgreSQL,
  Docker,
  WordPress,
  SourceTree,
  Bootstrap,
  "Node.js": Git, // Puedes cambiarlo por un icono de Node si lo tienes
  Supabase,
  "Alpine.js": JavaScript,
  PayPal: PayPal
};
function getIcon(tech: string) {
  return tech in SKILLS_ICONS ? SKILLS_ICONS[tech as keyof typeof SKILLS_ICONS] : null;
}
---

<Section title="Experiencia laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, url, stack = [] }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate && endDate !== "Actualmente"
              ? new Date(endDate).getFullYear()
              : "Actualmente";

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      {url ? (
                        <a href={url} title={`Ver ${name}`} target="_blank">
                          {name}
                        </a>
                      ) : (
                        name
                      )}
                    </h3>
                    <h4>{position}</h4>
                    {stack.length > 0 && (
                      <div class="stack-chips-row">
                        {stack.map((tech: string) => {
                          const Icon = getIcon(tech);
                          return (
                            <span class="stack-chip" title={tech}>
                              {Icon && <Icon />}
                              <span>{tech}</span>
                            </span>
                          );
                        })}
                      </div>
                    )}
                  </div>

                  <div>
                    <time datetime={startDate} data-title={startDate}>
                      {startYear}
                    </time>
                    {" - "}
                    <time datetime={endDate} data-title={endDate}>
                      {endYear}
                    </time>
                  </div>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          );
        },
      )
    }
  </ul>
</Section>

<style>
  :root {
    --color-primary: #2563eb;
    --color-accent: #38bdf8;
    --color-bg: #f3f4f6;
    --color-bg-hover: #e0e7ef;
    --color-text: #222;
    --color-white: #fff;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  article {
    border-radius: 18px;
    box-shadow: 0 4px 24px #00000044;
    background: var(--card-bg-color);
    padding: 22px 32px;
    transition: box-shadow 0.25s, transform 0.22s;
    border: 1.5px solid var(--card-border-color);
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 18px;
  }
  article:hover {
    box-shadow: 0 12px 36px #00000066;
    transform: translateY(-6px) scale(1.025);
    border: 1.5px solid var(--primary-color);
  }
  article h3 {
    font-weight: 700;
    color: var(--heading-color);
    font-size: 1.22rem;
    margin-bottom: 2px;
    letter-spacing: -0.01em;
  }
  article a {
    color: var(--primary-color);
    transition: color 0.2s;
    text-decoration: none;
  }
  article a:hover {
    text-decoration: underline;
    color: var(--secondary-color);
  }
  article h4 {
    color: var(--text-color);
    font-weight: 500;
    font-size: 1.08rem;
    margin-bottom: 6px;
    letter-spacing: -0.01em;
  }
  .stack-chips-row {
    display: flex;
    flex-wrap: wrap;
    gap: 14px;
    justify-content: center;
    margin: 18px 0 18px 0;
  }
  .stack-chip {
    display: flex;
    align-items: center;
    gap: 7px;
    background: var(--bg-color);
    border-radius: 999px;
    padding: 7px 16px;
    font-size: 1em;
    font-weight: 500;
    color: var(--text-color);
    box-shadow: 0 2px 8px #00000044;
    transition: background 0.2s, color 0.2s, transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
    min-width: 80px;
    justify-content: center;
    white-space: nowrap;
    position: relative;
  }
  .stack-chip svg,
  .stack-chip svg * {
    color: #fff !important;
    fill: #fff !important;
    stroke: #fff !important;
    opacity: 1 !important;
    width: 18px;
    height: 18px;
  }
  /* Modo oscuro: texto e iconos blancos */
  :root[data-theme="dark"] .stack-chip,
  body.dark .stack-chip {
    color: #fff;
  }
  .stack-chip:hover, .stack-chip:active {
    background: var(--primary-color);
    color: #fff;
    transform: scale(1.07);
    box-shadow: 0 6px 24px #00000066;
  }
  .stack-chip[data-tooltip]:hover:after, .stack-chip[data-tooltip]:focus:after {
    content: attr(data-tooltip);
    position: absolute;
    left: 50%;
    bottom: 110%;
    transform: translateX(-50%);
    background: #222;
    color: #fff;
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 0.85em;
    white-space: nowrap;
    box-shadow: 0 2px 8px #00000044;
    opacity: 1;
    pointer-events: none;
    z-index: 10;
  }
  .stack-chip[data-tooltip]:after {
    opacity: 0;
    transition: opacity 0.2s;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }
  time {
    color: #9ca3af;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }
  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }
  [data-title]:after {
    content: attr(data-title);
    background-color: #333;
    color: #fff;
    font-size: 0.75rem;
    font-family: Menlo, Monaco, Lucida Console, "Courier New", monospace;
    position: absolute;
    padding: 0.2rem 0.5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid #111111;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }
  [data-title] {
    position: relative;
  }
  @media (max-width: 700px) {
    ul {
      gap: 22px;
    }
    article {
      padding: 12px 4px;
      margin-bottom: 12px;
    }
    .stack-chips-row {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
      justify-items: center;
      margin: 10px 0 10px 0;
    }
    .stack-chip {
      padding: 6px 10px;
      font-size: 0.93em;
      min-width: 70px;
      gap: 5px;
    }
    .stack-chip svg,
    .stack-chip svg * {
      width: 15px;
      height: 15px;
    }
    article h3 {
      font-size: 1.08rem;
    }
    article h4 {
      font-size: 0.98rem;
    }
  }
  .icon-laravel,
  .icon-php,
  .icon-wordpress,
  .icon-postgresql {
    color: #fff !important;
    fill: #fff !important;
    stroke: #fff !important;
    opacity: 1 !important;
  }
</style>
