<style>
  .terminal-container {
    background: var(--card-bg-color);
    border: var(--pixel-border) solid var(--card-border-color);
    box-shadow: var(--pixel-shadow);
    margin-bottom: 2rem;
    font-family: "VT323", monospace;
    overflow: hidden;
  }

  .terminal-header {
    background: var(--primary-color);
    padding: 8px 16px;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: var(--pixel-border) solid var(--card-border-color);
  }

  .terminal-buttons {
    display: flex;
    gap: 6px;
  }

  .terminal-button {
    width: 12px;
    height: 12px;
    border: var(--pixel-border) solid var(--text-color);
    background: var(--retro-yellow);
  }

  .terminal-button.close {
    background: var(--retro-orange);
  }

  .terminal-button.minimize {
    background: var(--retro-yellow);
  }

  .terminal-button.maximize {
    background: var(--retro-green);
  }

  .terminal-title {
    color: var(--text-color);
    font-family: "Press Start 2P", monospace;
    font-size: 0.7rem;
    margin-left: auto;
  }

  .terminal-content {
    padding: 20px;
    background: var(--terminal-bg);
    color: var(--terminal-text);
    min-height: 300px;
  }

  .command-line {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
    font-size: 1.1rem;
    color: var(--terminal-command);
    font-weight: bold;
  }

  .prompt {
    color: var(--retro-blue);
    font-weight: bold;
  }

  .command {
    color: var(--retro-yellow);
  }

  .file-content {
    margin-bottom: 20px;
    color: var(--terminal-text);
  }

  .typing-text {
    margin-bottom: 16px;
    line-height: 1.6;
    opacity: 0;
    animation: fadeIn 0.5s ease-in forwards;
  }

  .typing-text.delay-1 { animation-delay: 1s; }
  .typing-text.delay-2 { animation-delay: 2s; }
  .typing-text.delay-3 { animation-delay: 3s; }
  .typing-text.delay-4 { animation-delay: 4s; }
  .typing-text.delay-5 { animation-delay: 5s; }
  .typing-text.delay-6 { animation-delay: 6s; }

  .cursor {
    animation: blink 1s infinite;
    color: var(--retro-green);
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .button-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
  }

  .btn-secondary {
    background: transparent !important;
    color: var(--primary-color) !important;
    border: var(--pixel-border) solid var(--primary-color) !important;
  }

  .btn-secondary:hover {
    background: var(--primary-color) !important;
    color: var(--card-bg-color) !important;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .terminal-content {
      padding: 16px;
      font-size: 0.9rem;
    }
    
    .terminal-title {
      font-size: 0.6rem;
    }
    
    .button-container {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<script>
  // Efecto de escritura adicional para el cursor
  document.addEventListener('DOMContentLoaded', () => {
    const cursor = document.querySelector('.cursor');
    if (cursor && cursor instanceof HTMLElement) {
      let visible = true;
      setInterval(() => {
        visible = !visible;
        cursor.style.opacity = visible ? '1' : '0';
      }, 500);
    }
    // Sonidos personalizados para los botones de CV
    const sonicSound = new Audio('/sonic-ring.mp3');
    sonicSound.volume = 0.25;
    const marioSound = new Audio('/mario-powerup.mp3');
    marioSound.volume = 0.25;
    const btnDescargar = document.querySelector('a[download]');
    if (btnDescargar) {
      btnDescargar.addEventListener('click', () => {
        try { sonicSound.currentTime = 0; sonicSound.play(); } catch (e) {}
      });
    }
    const btnVerOnline = document.querySelector('a.btn-secondary, a.pixel-button.btn-secondary');
    if (btnVerOnline) {
      btnVerOnline.addEventListener('click', () => {
        try { marioSound.currentTime = 0; marioSound.play(); } catch (e) {}
      });
    }
  });
</script>
