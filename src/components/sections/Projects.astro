<style>
  :root {
    --color-primary: #2563eb;
    --color-accent: #38bdf8;
    --color-bg: #f3f4f6;
    --color-bg-hover: #e0e7ef;
    --color-text: #222;
    --color-white: #fff;
  }
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
    gap: 2rem;
    margin-inline: 0;
  }
  .project-card {
    list-style: none;
    height: 100%;
  }
  article {
    border-radius: 18px;
    box-shadow: 0 4px 24px #2563eb11;
    background: var(--color-bg);
    display: flex;
    flex-direction: column;
    padding: 0 0 18px 0;
    height: 100%;
    transition: box-shadow 0.25s, transform 0.22s;
    border: 1.5px solid #e0e7ef;
  }
  article:hover {
    box-shadow: 0 12px 36px #2563eb33;
    transform: translateY(-6px) scale(1.025);
    border: 1.5px solid var(--color-accent);
  }
  .project-image {
    width: 100%;
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-hover);
    border-radius: 18px 18px 0 0;
    overflow: hidden;
  }
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top center;
    display: block;
  }
  .project-placeholder {
    font-size: 2.5rem;
    color: #bdbdbd;
  }
  .project-title {
    font-size: 1.18rem;
    font-weight: 700;
    margin: 16px 0 4px 0;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .project-title a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.2s;
  }
  .project-title a:hover {
    text-decoration: underline;
    color: var(--color-accent);
  }
  .project-dot {
    color: #00bc2f;
    font-size: 1.2em;
    animation: flicker 3s ease-in infinite;
  }
  .project-desc {
    font-size: 1.01rem;
    line-height: 1.35rem;
    margin-bottom: 8px;
    color: #444;
    white-space: pre-line;
  }
  .project-demo-access {
    background: #e0f2fe;
    border: 1.5px solid var(--color-accent);
    border-radius: 10px;
    padding: 10px 16px;
    margin: 10px 0 14px 0;
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: 0.98em;
  }
  .demo-icon {
    font-size: 1.6em;
    margin-top: 2px;
  }
  .project-demo-access b {
    color: var(--color-primary);
    font-family: 'Fira Mono', monospace;
  }
  .project-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 12px;
  }
  .project-badge {
    border-radius: 999px;
    background: var(--color-bg-hover);
    color: var(--color-text);
    font-size: 0.85rem;
    font-weight: 500;
    padding: 0.3rem 1.1rem;
    letter-spacing: 0.01em;
    box-shadow: 0 1px 2px #2563eb11;
    transition: background 0.2s, color 0.2s;
  }
  .project-badge:hover {
    background: var(--color-accent);
    color: var(--color-white);
  }
  .project-actions {
    display: flex;
    gap: 10px;
    margin-top: auto;
    padding: 0 16px;
  }
  .project-btn {
    background: var(--color-primary);
    color: var(--color-white);
    border-radius: 8px;
    padding: 0.45em 1.3em;
    font-size: 1em;
    font-weight: 500;
    text-decoration: none;
    transition: background 0.2s, transform 0.2s;
    display: flex;
    align-items: center;
    gap: 6px;
    box-shadow: 0 1px 4px #2563eb11;
  }
  .project-btn:hover {
    background: var(--color-accent);
    transform: scale(1.07);
  }
  .code-btn {
    background: #222;
  }
  .code-btn:hover {
    background: #444;
  }
  @keyframes flicker {
    0% { opacity: 1; }
    50% { opacity: 0.25; }
    100% { opacity: 1; }
  }
  @media (width <= 700px) {
    ul {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    .project-image {
      height: 80px;
    }
    .project-title {
      font-size: 1rem;
    }
  }
</style>
